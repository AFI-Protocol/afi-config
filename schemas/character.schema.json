{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://afi-protocol.org/schemas/character.schema.json",
  "title": "AFI Character Configuration Schema",
  "description": "Schema for agent/character configurations in afi-core (ElizaOS runtime)",
  "type": "object",
  "required": ["id", "name", "role"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the character",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Display name of the character",
      "minLength": 1,
      "maxLength": 100
    },
    "role": {
      "type": "string",
      "description": "Primary role or function of the character",
      "enum": [
        "analyst",
        "validator",
        "executor",
        "observer",
        "coordinator",
        "mentor"
      ]
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the character's purpose and behavior",
      "maxLength": 1000
    },
    "traits": {
      "type": "array",
      "description": "Personality traits and behavioral characteristics",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 50
      },
      "uniqueItems": true
    },
    "abilities": {
      "type": "array",
      "description": "Capabilities and skills the character possesses",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100
      },
      "uniqueItems": true
    },
    "knowledgeDomains": {
      "type": "array",
      "description": "Areas of expertise and knowledge",
      "items": {
        "type": "string"
      }
    },
    "systemPrompt": {
      "type": "string",
      "description": "System-level prompt or instructions for the character"
    },
    "temperature": {
      "type": "number",
      "description": "LLM temperature setting (0.0 - 2.0)",
      "minimum": 0.0,
      "maximum": 2.0,
      "default": 0.7
    },
    "maxTokens": {
      "type": "integer",
      "description": "Maximum tokens for LLM responses",
      "minimum": 1,
      "maximum": 32000,
      "default": 2000
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for the character",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

