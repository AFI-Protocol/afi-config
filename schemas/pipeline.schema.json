{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://afi-protocol.org/schemas/pipeline.schema.json",
  "title": "AFI Pipeline Configuration Schema",
  "description": "Schema for signal processing pipeline configurations in afi-reactor",
  "type": "object",
  "required": ["id", "name", "nodes", "edges"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the pipeline",
      "pattern": "^[a-z0-9-]+$"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name of the pipeline",
      "minLength": 1,
      "maxLength": 100
    },
    "version": {
      "type": "string",
      "description": "Semantic version of the pipeline. Follows the pattern v{major}.{minor}.{patch} for AFI-Reactor LangGraph integration.",
      "pattern": "^v\\d+\\.\\d+\\.\\d+$",
      "examples": [
        "v1.0.0",
        "v1.2.3",
        "v2.0.0"
      ]
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the pipeline's purpose",
      "maxLength": 500
    },
    "nodes": {
      "type": "array",
      "description": "Processing nodes in the pipeline",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique node identifier within the pipeline"
          },
          "type": {
            "type": "string",
            "description": "Type of processing node",
            "enum": [
              "generator",
              "analyzer",
              "validator",
              "executor",
              "observer",
              "transformer",
              "filter"
            ]
          },
          "pluginId": {
            "type": "string",
            "description": "Reference to plugin that implements this node"
          },
          "config": {
            "type": "object",
            "description": "Node-specific configuration",
            "additionalProperties": true
          },
          "signalSchema": {
            "type": "string",
            "description": "Expected signal schema for this node (e.g., afi.usignal.v1)",
            "default": "afi.usignal.v1"
          },
          "inputs": {
            "type": "array",
            "description": "Input port definitions",
            "items": {
              "type": "string"
            }
          },
          "outputs": {
            "type": "array",
            "description": "Output port definitions",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "minItems": 1
    },
    "edges": {
      "type": "array",
      "description": "Connections between nodes (DAG edges)",
      "items": {
        "type": "object",
        "required": ["from", "to"],
        "properties": {
          "from": {
            "type": "string",
            "description": "Source node ID"
          },
          "to": {
            "type": "string",
            "description": "Target node ID"
          },
          "fromPort": {
            "type": "string",
            "description": "Output port on source node"
          },
          "toPort": {
            "type": "string",
            "description": "Input port on target node"
          },
          "condition": {
            "type": "string",
            "description": "Optional condition for edge activation"
          }
        }
      }
    },
    "entryNode": {
      "type": "string",
      "description": "ID of the entry node for pipeline execution"
    },
    "exitNodes": {
      "type": "array",
      "description": "IDs of nodes that can terminate pipeline execution",
      "items": {
        "type": "string"
      }
    },
    "requiredNodes": {
      "type": "array",
      "description": "Required node types that must be present in the pipeline for AFI-Reactor LangGraph integration. These represent the core processing stages.",
      "items": {
        "type": "string",
        "description": "Type of required node",
        "enum": ["analyst", "execution", "observer"]
      },
      "uniqueItems": true,
      "examples": [
        ["analyst", "execution"],
        ["analyst", "execution", "observer"]
      ]
    },
    "enrichmentNodes": {
      "type": "object",
      "description": "Enrichment node definitions for the pipeline. Each key is a node ID and the value is an enrichment node configuration. These nodes provide signal enrichment capabilities.",
      "additionalProperties": {
        "$ref": "https://afi-protocol.org/schemas/definitions/enrichment-node.schema.json"
      },
      "examples": [
        {
          "price-enricher": {
            "id": "price-enricher",
            "type": "enrichment",
            "plugin": "afi-price-enricher",
            "enabled": true,
            "optional": false,
            "parallel": false,
            "dependencies": [],
            "config": {
              "sources": ["coingecko", "coinmarketcap"]
            }
          }
        }
      ]
    },
    "metadata": {
      "type": "object",
      "description": "Additional pipeline metadata",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

