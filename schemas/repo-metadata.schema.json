{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://afi-protocol.org/schemas/repo-metadata.schema.json",
  "title": "AFI Repository Metadata Schema",
  "description": "Schema for .afi-codex.json repository metadata files",
  "type": "object",
  "required": ["codexVersion", "module"],
  "properties": {
    "codexVersion": {
      "type": "string",
      "description": "Version of the AFI Codex metadata format",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "module": {
      "type": "object",
      "description": "Module information",
      "required": ["name", "role", "description"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Module name",
          "pattern": "^[a-z0-9-]+$"
        },
        "role": {
          "type": "string",
          "description": "Module role in the AFI ecosystem"
        },
        "description": {
          "type": "string",
          "description": "Detailed module description"
        },
        "version": {
          "type": "string",
          "description": "Module version",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      }
    },
    "entrypoints": {
      "type": "array",
      "description": "Module entrypoints",
      "items": {
        "type": "object",
        "required": ["path", "type"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to entrypoint"
          },
          "type": {
            "type": "string",
            "description": "Type of entrypoint"
          },
          "description": {
            "type": "string",
            "description": "Entrypoint description"
          }
        }
      }
    },
    "provides": {
      "type": "array",
      "description": "What this module provides to other modules",
      "items": {
        "type": "string"
      }
    },
    "dependsOn": {
      "type": "array",
      "description": "Modules this module depends on",
      "items": {
        "type": "string"
      }
    },
    "consumers": {
      "type": "array",
      "description": "Modules that consume this module",
      "items": {
        "type": "string"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

